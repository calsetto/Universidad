@model Universidad.Models.Alumno
@{
    ViewBag.Title = "Actualizar";
}

<h1>Actualizar</h1>

<h4>Alumno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Actualizar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Boleta" class="control-label"></label>
                <input asp-for="Boleta" class="form-control" />
                <span asp-validation-for="Boleta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CURP" class="control-label"></label>
                <input asp-for="CURP" class="form-control" />
                <span asp-validation-for="CURP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha_nac" class="control-label"> Fecha de nacimiento</label>
                <input asp-for="Fecha_nac" class="form-control" />
                <span asp-validation-for="Fecha_nac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Lista">Volver a la lista</a>
</div>

